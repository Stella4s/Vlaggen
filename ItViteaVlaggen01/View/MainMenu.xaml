<UserControl x:Class="ItViteaVlaggen01.View.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ItViteaVlaggen01.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Welcome to flags of the world." VerticalAlignment="Center" HorizontalContentAlignment="Center" AutomationProperties.IsRowHeader="True" AutomationProperties.Name="AlphaTest"/>
        <Button Content="Start Quiz" Margin="50,0,50,0" Grid.Row="1" VerticalAlignment="Center" Click="Button_Click"/>
        <Button Content="Overview all Flags" Margin="50,50,50,0" Grid.Row="1" VerticalAlignment="Center" Click="Button_ListAll"/>

    </Grid>
</UserControl>
